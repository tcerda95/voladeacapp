<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/state_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="ACA VA EL ESTADO"
            android:textSize="24sp"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/salida_label"
                    android:textSize="24sp"
                    android:paddingTop="10dip"
                    android:paddingLeft="5dip" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/date_label"
                    android:textSize="14sp"
                    android:textIsSelectable="false"
                    android:textStyle="normal|bold"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:paddingLeft="5dip" />

                <TextView
                    android:id="@+id/from_date_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:text= "LALLALA"
                    android:textSize="14sp"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/boarding_time_label"
                    android:textSize="14sp"
                    android:textIsSelectable="false"
                    android:textStyle="normal|bold"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:paddingLeft="5dip" />

                <TextView
                    android:id="@+id/from_boarding_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:text= "LALLALA"
                    android:textSize="14sp"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/airport_label"
                    android:textSize="14sp"
                    android:textIsSelectable="false"
                    android:textStyle="normal|bold"
                    android:layout_width="50dp"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:paddingLeft="5dip" />

                <TextView
                    android:id="@+id/from_airport_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:text= "LALLALA"
                    android:textSize="14sp"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:text="@string/terminal_label"
                    android:textSize="14sp"
                    android:textIsSelectable="false"
                    android:textStyle="normal|bold"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:paddingLeft="5dip" />
                <TextView
                    android:id="@+id/from_terminal_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ems="10"
                    android:text= "LALLALA"
                    android:textSize="14sp"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25"
                android:text="@string/gate_label"
                android:textSize="14sp"
                android:textIsSelectable="false"
                android:textStyle="normal|bold"
                android:layout_width="50dp"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingLeft="5dip" />

            <TextView
                android:id="@+id/from_gate_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:ems="10"
                android:text= "LALLALA"
                android:textSize="14sp"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" />
            </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/llegada"
                        android:textSize="24sp"
                        android:paddingTop="10dip"
                        android:paddingLeft="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/date_label"
                        android:textSize="14sp"
                        android:textIsSelectable="false"
                        android:textStyle="normal|bold"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:layout_width="50dp"
                        android:paddingStart="5dip" />

                    <TextView
                        android:id="@+id/to_date_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:text= "LALLALA"
                        android:textSize="14sp"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/boarding_time_label"
                        android:textSize="14sp"
                        android:textIsSelectable="false"
                        android:textStyle="normal|bold"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:layout_width="50dp"
                        android:paddingStart="5dip" />

                    <TextView
                        android:id="@+id/to_boarding_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:text= "LALLALA"
                        android:textSize="14sp"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="@string/airport_label"
                        android:textSize="14sp"
                        android:textIsSelectable="false"
                        android:textStyle="normal|bold"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:layout_width="50dp"
                        android:paddingStart="5dip" />

                    <TextView
                        android:id="@+id/to_airport_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:text= "LALLALA"
                        android:textSize="14sp"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.25"
                        android:text="@string/terminal_label"
                        android:textSize="14sp"
                        android:textIsSelectable="false"
                        android:textStyle="normal|bold"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:layout_width="50dp"
                        android:paddingStart="5dip" />
                    <TextView
                        android:id="@+id/to_terminal_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:text= "LALLALA"
                        android:textSize="14sp"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.25"
                        android:text="@string/gate_label"
                        android:textSize="14sp"
                        android:textIsSelectable="false"
                        android:textStyle="normal|bold"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:layout_width="50dp"
                        android:paddingStart="5dip" />

                    <TextView
                        android:id="@+id/to_gate_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:text= "LALLALA"
                        android:textSize="14sp"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/baggage_claim_label"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:layout_weight="0.03"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:layout_width="150dp"
                        android:paddingStart="5dip" />
                    <TextView
                        android:id="@+id/baggage_claim_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="34"
                        android:textSize="14sp"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
