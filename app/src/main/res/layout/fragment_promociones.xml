<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Chelo debug entrypoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chelo_dbg_btn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Desde"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fecha"
        android:id="@+id/from_date_edit_text"/>

    <ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/promo_card_list"
    android:dividerHeight="0dp"
    android:divider="@null"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >
    </ListView>

    <!-- Solo se muestra cuando no hay vuelos -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_attach_money_black_24px"
        android:id="@+id/empty_promos_placeholder"
        android:visibility="invisible"
        />

</LinearLayout>