<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_flight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hci.voladeacapp.AddFlightActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ch_airline_id"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="ID aerolinea" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:id="@+id/chelo_flight_info"
        android:layout_below="@+id/fl_search_btn"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fl_search_btn"
        android:layout_alignBottom="@+id/fl_num"
        android:layout_toEndOf="@+id/ch_airline_id"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fl_num"
        android:hint="Numero de vuelo"
        android:layout_below="@+id/ch_airline_id"
        android:layout_toStartOf="@+id/fl_search_btn" />

    <Button
        android:text="Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/add_btn"
        android:layout_below="@+id/fl_num"
        android:layout_alignStart="@+id/fl_search_btn"
        android:layout_marginTop="16dp" />
</RelativeLayout>
